# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript, JavaScript, JSON files - matches Biome formatter settings
[*.{ts,tsx,js,jsx,json,json5,jsonc}]
indent_style = space
indent_size = 2
max_line_length = 100
quote_type = single

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2

# Package.json specifically
[package.json]
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Configuration files
[*.config.{js,ts,mjs,cjs}]
indent_size = 2

# Vite config
[vite.config.{ts,js}]
indent_size = 2
